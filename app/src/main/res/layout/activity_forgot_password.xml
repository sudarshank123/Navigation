<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ForgotPasswordActivity">
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neu_toolbar"
        app:neumorph_shapeType="flat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:neumorph_backgroundColor="@color/background"
        app:neumorph_shadowColorDark="@color/dark_shadow"
        app:neumorph_shadowColorLight="@color/light_shadow"
        app:neumorph_shadowElevation="@dimen/_5sdp"
        app:neumorph_shapeAppearance="@style/NeumorphismRoundCardImage">
        <ImageButton
            android:id="@+id/back_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/LightGrey"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/LightGrey"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </soup.neumorphism.NeumorphCardView>
    <RelativeLayout
        android:layout_below="@id/neu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp">
        <TextView
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter your"
            android:textColor="@color/LightGrey"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/abril_fatface"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/Header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="register email address"
            android:layout_below="@id/Header"
            android:textColor="@color/LightGrey"
            android:textSize="24sp"
            android:fontFamily="@font/abril_fatface"
            android:gravity="center_horizontal"/>
        <TextView
            android:id="@+id/textview_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email*"
            android:textSize="16dp"
            android:textColor="@color/LightGrey"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_below="@id/img"
            android:layout_marginTop="10dp"/>
        <soup.neumorphism.NeumorphImageView
            app:neumorph_shapeType="flat"
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Header"
            android:layout_marginTop="40dp"
            android:src="@drawable/login_draw"
            android:layout_centerHorizontal="true"/>
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/neu_emailaddress"
            android:layout_below="@id/textview_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_shapeType="pressed"
            style="@style/Widget.Neumorph.CardView"
            app:neumorph_backgroundColor="@color/background"
            app:neumorph_shadowColorDark="@color/dark_shadow"
            app:neumorph_shadowColorLight="@color/light_shadow"
            app:neumorph_shadowElevation="@dimen/_5sdp"
            app:neumorph_shapeAppearance="@style/NeumorphismCard">
            <EditText
                android:id="@+id/editText_password_reset_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/no_background"
                android:textSize="16dp"
                android:layout_below="@id/textview_email"
                android:hint="Enter Your Email Address"
                android:padding="@dimen/_10sdp"/>
        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphButton
            style="@style/Widget.Neumorph.Button"
            android:id="@+id/reset_pwd_button"
            android:layout_width="200dp"
            android:layout_height="70dp"
            app:neumorph_shapeType="flat"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/LightGrey"
            android:text="Reset Password"
            android:layout_below="@id/neu_emailaddress"
            android:layout_centerHorizontal="true"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:elevation="10dp"
            android:id="@+id/progressBar"
            android:visibility="gone"/>
    </RelativeLayout>

    </RelativeLayout>
