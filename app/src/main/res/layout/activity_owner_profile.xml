<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".OwnerProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <soup.neumorphism.NeumorphCardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp">

            <Button
                android:id="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                tools:ignore="TouchTargetSizeCheck" />
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_baseline_arrow_circle_left_24"
                android:layout_gravity="center"
                app:tint="@color/LightGrey"/>
        </soup.neumorphism.NeumorphCardView>
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/neu_card"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="-40dp"
           android:layout_gravity="center_horizontal"
            app:neumorph_shapeType="flat"
            app:neumorph_backgroundColor="@color/background"
            app:neumorph_shadowColorDark="@color/dark_shadow"
            app:neumorph_shadowColorLight="@color/light_shadow"
            app:neumorph_shadowElevation="@dimen/_8sdp"
            app:neumorph_shapeAppearance="@style/NeumorphismCardImage">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blankavatar"
                android:id="@+id/profile_img"/>
        </soup.neumorphism.NeumorphCardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-55dp"
            android:clickable="true"
            android:contentDescription="TODO"
            android:focusable="true"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@drawable/ic_baseline_add_24"
            android:tint="@color/white"
            app:fabSize="mini"
            tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView_show_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/abril_fatface"
            android:hint="Loading"
            android:textColor="@color/LightGrey"
            android:textColorHint="#607D8B"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />
        <soup.neumorphism.NeumorphCardView
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_7sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_shapeType="flat"
            app:neumorph_backgroundColor="@color/background"
            app:neumorph_shadowColorDark="@color/dark_shadow"
            app:neumorph_shadowColorLight="@color/light_shadow"
            app:neumorph_shadowElevation="@dimen/_5sdp"
            app:neumorph_shapeAppearance="@style/NeumorphismCard">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/neu_img1"
                        android:layout_width="@dimen/_58sdp"
                        android:layout_height="@dimen/_58sdp"
                        app:neumorph_shapeType="pressed"
                        app:neumorph_backgroundColor="@color/background"
                        app:neumorph_shadowColorDark="@color/dark_shadow"
                        app:neumorph_shadowColorLight="@color/light_shadow"
                        app:neumorph_shadowElevation="@dimen/_5sdp"
                        app:neumorph_shapeAppearance="@style/NeumorphismSquareCardImage">
                        <ImageView
                            android:backgroundTint="@color/purple_700"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="@dimen/_22sdp"
                            android:id="@+id/ic_profile"
                            android:background="@drawable/ic_baseline_person_24"
                            android:contentDescription="TODO" />
                    </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:id="@+id/textView_show_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:hint="Lodaing...."
                        android:textColor="@color/LightGrey"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linear_1">
                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/neu_img2"
                        android:layout_width="@dimen/_58sdp"
                        android:layout_height="@dimen/_58sdp"
                        app:neumorph_shapeType="pressed"
                        app:neumorph_backgroundColor="@color/background"
                        app:neumorph_shadowColorDark="@color/dark_shadow"
                        app:neumorph_shadowColorLight="@color/light_shadow"
                        app:neumorph_shadowElevation="@dimen/_5sdp"
                        app:neumorph_shapeAppearance="@style/NeumorphismSquareCardImage">
                        <ImageView
                            android:backgroundTint="@color/purple_700"
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/ic_email"
                            android:background="@drawable/ic_baseline_email_24"/>
                    </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:id="@+id/textView_show_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:hint="Lodaing...."
                        android:textColor="@color/LightGrey"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/linear_2">
                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/neu_img3"
                        android:layout_width="@dimen/_58sdp"
                        android:layout_height="@dimen/_58sdp"
                        app:neumorph_shapeType="pressed"
                        app:neumorph_backgroundColor="@color/background"
                        app:neumorph_shadowColorDark="@color/dark_shadow"
                        app:neumorph_shadowColorLight="@color/light_shadow"
                        app:neumorph_shadowElevation="@dimen/_5sdp"
                        app:neumorph_shapeAppearance="@style/NeumorphismSquareCardImage">
                        <ImageView
                            android:backgroundTint="@color/purple_700"
                            android:layout_gravity="center"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/ic_dob"
                            android:background="@drawable/birth"/>
                    </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:id="@+id/textView_show_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:hint="Lodaing...."
                        android:textColor="@color/LightGrey"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                  android:id="@+id/linear_4"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/linear_3"
                  android:orientation="horizontal">
                  <soup.neumorphism.NeumorphCardView
                      android:id="@+id/neu_img4"
                      android:layout_width="@dimen/_58sdp"
                      android:layout_height="@dimen/_58sdp"
                      app:neumorph_shapeType="pressed"
                      app:neumorph_backgroundColor="@color/background"
                      app:neumorph_shadowColorDark="@color/dark_shadow"
                      app:neumorph_shadowColorLight="@color/light_shadow"
                      app:neumorph_shadowElevation="@dimen/_5sdp"
                      app:neumorph_shapeAppearance="@style/NeumorphismSquareCardImage">
                      <ImageView
                          android:backgroundTint="@color/purple_700"
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:layout_gravity="center"
                          android:background="@drawable/ic_baseline_phone_24"/>
                  </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:id="@+id/textView_show_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:hint="Lodaing...."
                        android:textColor="@color/LightGrey"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                     android:id="@+id/linear_5"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/linear_4"
                     android:orientation="horizontal">
                     <soup.neumorphism.NeumorphCardView
                         android:id="@+id/neu_img5"
                         android:layout_width="@dimen/_58sdp"
                         android:layout_height="@dimen/_58sdp"
                         app:neumorph_shapeType="pressed"
                         app:neumorph_backgroundColor="@color/background"
                         app:neumorph_shadowColorDark="@color/dark_shadow"
                         app:neumorph_shadowColorLight="@color/light_shadow"
                         app:neumorph_shadowElevation="@dimen/_5sdp"
                         app:neumorph_shapeAppearance="@style/NeumorphismSquareCardImage">
                         <ImageView
                             android:backgroundTint="@color/purple_700"
                             android:layout_width="25dp"
                             android:layout_height="25dp"
                             android:id="@+id/ic_gender"
                             android:layout_gravity="center"
                             android:background="@drawable/gender"/>
                     </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:id="@+id/textView_show_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:hint="Lodaing...."
                        android:textColor="@color/LightGrey"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp" />
                 </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/linear_5">
                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/neu_img6"
                        android:layout_width="@dimen/_58sdp"
                        android:layout_height="@dimen/_58sdp"
                        app:neumorph_shapeType="pressed"
                        app:neumorph_backgroundColor="@color/background"
                        app:neumorph_shadowColorDark="@color/dark_shadow"
                        app:neumorph_shadowColorLight="@color/light_shadow"
                        app:neumorph_shadowElevation="@dimen/_5sdp"
                        app:neumorph_shapeAppearance="@style/NeumorphismSquareCardImage">
                        <ImageView
                            android:backgroundTint="@color/purple_700"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/ic_aadhaar"
                            android:layout_gravity="center"
                            android:background="@drawable/aadhaar"/>
                    </soup.neumorphism.NeumorphCardView>

                    <TextView
                        android:id="@+id/textView_show_aadhaar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:hint="Lodaing...."
                        android:textColor="@color/LightGrey"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp" />
                </LinearLayout>
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_centerHorizontal="true"
                    android:elevation="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </soup.neumorphism.NeumorphCardView>
    </LinearLayout>
</ScrollView>