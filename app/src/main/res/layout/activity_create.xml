<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CreateActivity">
    <soup.neumorphism.NeumorphCardView
        android:id="@+id/neu_toolbar"
        app:neumorph_shapeType="flat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:neumorph_backgroundColor="@color/background"
        app:neumorph_shadowColorDark="@color/dark_shadow"
        app:neumorph_shadowColorLight="@color/light_shadow"
        app:neumorph_shadowElevation="@dimen/_5sdp"
        app:neumorph_shapeAppearance="@style/NeumorphismRoundCardImage">
        <ImageButton
            android:id="@+id/back_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/LightGrey"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner Registration"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/LightGrey"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </soup.neumorphism.NeumorphCardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/neu_toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_register_full_name"
                    android:text="Full Name*"
                    android:textSize="16sp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/LightGrey"
                    android:layout_marginTop="10dp"/>
                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neu_fullName"
                    android:layout_below="@id/textview_register_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neumorph_shapeType="pressed"
                    style="@style/Widget.Neumorph.CardView"
                    app:neumorph_backgroundColor="@color/background"
                    app:neumorph_shadowColorDark="@color/dark_shadow"
                    app:neumorph_shadowColorLight="@color/light_shadow"
                    app:neumorph_shadowElevation="@dimen/_5sdp"
                    app:neumorph_shapeAppearance="@style/NeumorphismCard">

                    <EditText
                        android:id="@+id/editText_register_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/no_background"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/LightGrey"
                        android:hint="Enter Your Full Name"
                        android:inputType="textPersonName"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp"
                        android:autofillHints="" />
                </soup.neumorphism.NeumorphCardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_register_email"
                    android:layout_below="@id/neu_fullName"
                    android:text="Email*"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/LightGrey"/>
                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neu_Email"
                    android:layout_below="@id/textview_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neumorph_shapeType="pressed"
                    style="@style/Widget.Neumorph.CardView"
                    app:neumorph_backgroundColor="@color/background"
                    app:neumorph_shadowColorDark="@color/dark_shadow"
                    app:neumorph_shadowColorLight="@color/light_shadow"
                    app:neumorph_shadowElevation="@dimen/_5sdp"
                    app:neumorph_shapeAppearance="@style/NeumorphismCard">

                    <EditText
                        android:id="@+id/editText_register_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/no_background"
                        android:drawableStart="@drawable/ic_baseline_email_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/LightGrey"
                        android:hint="Enter Your Email"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp"
                        android:autofillHints="" />
                </soup.neumorphism.NeumorphCardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_register_dob"
                    android:layout_below="@id/neu_Email"
                    android:text="Date of Birth*"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/LightGrey"
                    android:layout_marginStart="@dimen/_10sdp"/>
                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neu_dob"
                    android:layout_below="@id/textview_register_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:neumorph_shapeType="pressed"
                    style="@style/Widget.Neumorph.CardView"
                    app:neumorph_backgroundColor="@color/background"
                    app:neumorph_shadowColorDark="@color/dark_shadow"
                    app:neumorph_shadowColorLight="@color/light_shadow"
                    app:neumorph_shadowElevation="@dimen/_5sdp"
                    app:neumorph_shapeAppearance="@style/NeumorphismCard">

                    <EditText
                        android:id="@+id/editText_register_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview_register_dob"
                        android:background="@drawable/no_background"
                        android:drawableStart="@drawable/ic_baseline_cake_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/LightGrey"
                        android:focusable="false"
                        android:hint="(dd/mm/yyyy)"
                        android:inputType="date"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp"
                        android:autofillHints="" />
                </soup.neumorphism.NeumorphCardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_register_gender"
                    android:layout_below="@id/neu_dob"
                    android:text="Gender*"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/LightGrey"
                    android:layout_marginStart="10dp"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation = "horizontal"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_below="@id/textview_register_gender"
                    android:id="@+id/radio_group_register_gender">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Female"
                        android:textSize="16sp"
                        android:textColor="@color/LightGrey"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="20dp"
                        android:text="Male"
                        android:textColor="@color/LightGrey"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </RadioGroup>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_register_mobile"
                    android:layout_below="@id/radio_group_register_gender"
                    android:text="Mobile Number*"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/LightGrey"
                    android:layout_marginStart="10dp"/>
                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neu_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_register_mobile"
                    app:neumorph_shapeType="pressed"
                    style="@style/Widget.Neumorph.CardView"
                    app:neumorph_backgroundColor="@color/background"
                    app:neumorph_shadowColorDark="@color/dark_shadow"
                    app:neumorph_shadowColorLight="@color/light_shadow"
                    app:neumorph_shadowElevation="@dimen/_5sdp"
                    app:neumorph_shapeAppearance="@style/NeumorphismCard">

                    <EditText
                        android:id="@+id/editText_register_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/no_background"
                        android:drawableStart="@drawable/ic_baseline_phone_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/LightGrey"
                        android:hint="10 digits"
                        android:inputType="phone"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp"
                        android:autofillHints="" />
                </soup.neumorphism.NeumorphCardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_register_password"
                    android:layout_below="@id/neu_mobile"
                    android:text="Password*"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/LightGrey"
                    android:layout_marginStart="10dp"/>
                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neu_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_register_password"
                    app:neumorph_shapeType="pressed"
                    style="@style/Widget.Neumorph.CardView"
                    app:neumorph_backgroundColor="@color/background"
                    app:neumorph_shadowColorDark="@color/dark_shadow"
                    app:neumorph_shadowColorLight="@color/light_shadow"
                    app:neumorph_shadowElevation="@dimen/_5sdp"
                    app:neumorph_shapeAppearance="@style/NeumorphismCard">

                    <EditText
                        android:id="@+id/editText_register_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview_register_password"
                        android:autofillHints=""
                        android:background="@drawable/no_background"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:drawableTint="@color/LightGrey"
                        android:hint="Enter your password"
                        android:importantForAutofill=""
                        android:inputType="textPassword"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp"
                        tools:ignore="TextContrastCheck" />
                </soup.neumorphism.NeumorphCardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_register_confirm_password"
                    android:layout_below="@id/neu_password"
                    android:text="Confirm Password*"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/LightGrey"
                    android:layout_marginStart="10dp"/>
                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neu_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_register_confirm_password"
                    app:neumorph_shapeType="pressed"
                    style="@style/Widget.Neumorph.CardView"
                    app:neumorph_backgroundColor="@color/background"
                    app:neumorph_shadowColorDark="@color/dark_shadow"
                    app:neumorph_shadowColorLight="@color/light_shadow"
                    app:neumorph_shadowElevation="@dimen/_5sdp"
                    app:neumorph_shapeAppearance="@style/NeumorphismCard">
                    <EditText
                        android:id="@+id/editText_register_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/no_background"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:drawableTint="@color/LightGrey"
                        android:drawablePadding="@dimen/_5sdp"
                        android:hint="Confirm your password"
                        android:inputType="textPassword"
                        android:textColorHint="#546E7A"
                        android:padding="@dimen/_10sdp"
                        android:textSize="16sp"
                        android:autofillHints="" />
                </soup.neumorphism.NeumorphCardView>
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:elevation="10dp"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_register_aadhaarNumber"
                    android:layout_below="@id/neu_confirm_password"
                    android:text="Aadhaar Number*"
                    android:textSize="16sp"
                    android:padding="6dp"
                    android:textColor="@color/LightGrey"
                    android:layout_marginStart="10dp"/>
                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/neu_aadhaar_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_register_aadhaarNumber"
                    app:neumorph_shapeType="pressed"
                    style="@style/Widget.Neumorph.CardView"
                    app:neumorph_backgroundColor="@color/background"
                    app:neumorph_shadowColorDark="@color/dark_shadow"
                    app:neumorph_shadowColorLight="@color/light_shadow"
                    app:neumorph_shadowElevation="@dimen/_5sdp"
                    app:neumorph_shapeAppearance="@style/NeumorphismCard">
                    <EditText
                        android:id="@+id/editText_register_aadhaarNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textview_register_aadhaarNumber"
                        android:drawableStart="@drawable/ic_baseline_fingerprint_24"
                        android:drawableTint="@color/LightGrey"
                        android:drawablePadding="@dimen/_5sdp"
                        android:background="@drawable/no_background"
                        android:hint="Enter your 12 digits Aadhaar Number"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="#546E7A"
                        android:textSize="16sp"
                        android:autofillHints="" />
                </soup.neumorphism.NeumorphCardView>
                <soup.neumorphism.NeumorphButton
                    style="@style/Widget.Neumorph.Button"
                    android:id="@+id/button_register"
                    android:layout_width="350dp"
                    android:layout_height="70dp"
                    app:neumorph_shapeType="flat"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/LightGrey"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:layout_below="@id/neu_aadhaar_number"
                    android:text="Register"/>
            </RelativeLayout>
        </ScrollView>

</RelativeLayout>